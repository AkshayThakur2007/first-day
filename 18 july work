Question .1

def greet(name):
   print(f"Hello, {name}!")
greet("Akshay")

Question .2

def add(a, b):
 return a + b
result = add(10, 20)
print("Sum:", result)

Question .3

def display(*args):
  for arg in args:
      print(arg)
display("Python", 123, True, 5.6)

Question .4

def student_info(**kwargs):
  for key, value in kwargs.items():
       print(f"{key}: {value}")
student_info(name="Akshay", age=21, roll_number=413)
